{% macro header(zone, active_tab) %}
{# Zone Navigation - buttons 1-30 (Desktop) #}
<div class="mb-3 d-none d-md-block">
    <div class="btn-group w-100" role="group">
        {% for i in 1..30 %}
            {% set route = active_tab == 'scores' ? 'zone' : (active_tab == 'info' ? 'zone_info' : (active_tab == 'strats' ? 'zone_strats' : 'zone_videos')) %}
            <a href="{{ path(route, {id: i}) }}" class="btn btn-{{ i == zone.id ? 'warning' : 'primary' }}">{{ i }}</a>
        {% endfor %}
    </div>
</div>

{# Zone Navigation - select (Mobile) #}
<div class="mb-3 d-md-none">
    {% set route = active_tab == 'scores' ? 'zone' : (active_tab == 'info' ? 'zone_info' : (active_tab == 'strats' ? 'zone_strats' : 'zone_videos')) %}
    <select class="form-select form-select-lg" onchange="window.location.href=this.value">
        {% for i in 1..30 %}
            <option value="{{ path(route, {id: i}) }}" {{ i == zone.id ? 'selected' : '' }}>
                Zone {{ i }}
            </option>
        {% endfor %}
    </select>
</div>

{# Zone Header #}
<div class="row mt-4 mb-3">
    <div class="col-12">
        <div class="d-flex align-items-center mb-3">
            {# Platform logos #}
            <img src="{{ asset('img/logos/xbox.png') }}" alt="Xbox" width="48" height="48" class="me-2">
            <img src="{{ asset('img/logos/gc.png') }}" alt="GameCube" width="48" height="48" class="me-2">
            {% if zone.ps2 %}
                <img src="{{ asset('img/logos/ps2.png') }}" alt="PS2" width="48" height="48" class="me-3">
            {% endif %}

            {# Zone title #}
            <h1 class="mb-0">Zone {{ zone.id }} - {{ zone.name }}</h1>
        </div>

        {# Navigation tabs #}
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link {{ active_tab == 'scores' ? 'active' : '' }}"
                   href="{{ path('zone', {id: zone.id}) }}">
                    Scores
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link {{ active_tab == 'info' ? 'active' : '' }}"
                   href="{{ path('zone_info', {id: zone.id}) }}">
                    Info
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link {{ active_tab == 'strats' ? 'active' : '' }}"
                   href="{{ path('zone_strats', {id: zone.id}) }}">
                    Strats
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link {{ active_tab == 'videos' ? 'active' : '' }}"
                   href="{{ path('zone_videos', {id: zone.id}) }}">
                    Vids
                </a>
            </li>
        </ul>
    </div>
</div>
{% endmacro %}
