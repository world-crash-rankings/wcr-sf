{# Player Header Section - Reusable across all player pages #}
<div class="row mt-4 mb-4">
    <div class="col-12">
        <div class="d-flex align-items-center mb-3">
            {# Country flag #}
            <img src="{{ asset('img/flags/64/' ~ player.country.iso ~ '.png') }}"
                 alt="{{ player.country.name }}"
                 title="{{ player.country.name }}"
                 height="64"
                 class="me-3">

            {# Player name and info #}
            <div>
                <h1 class="mb-1">{{ player.name }}</h1>
                <div class="text-muted">
                    {% if player.avgPosRank %}
                        <span class="badge bg-primary me-2">WCR #{{ player.avgPosRank }}</span>
                    {% endif %}
                    {% for platform in platforms %}
                        <img src="{{ asset('img/logos/' ~ platform|lower ~ '.png') }}"
                             alt="{{ platform }}"
                             title="{{ platform }}"
                             width="24" height="24"
                             class="me-1">
                    {% endfor %}
                </div>
            </div>
        </div>

        {# Navigation tabs #}
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link {{ active_tab == 'view' ? 'active' : '' }}"
                   href="{{ path('player_view', {'nameUrl': player.nameUrl}) }}">
                    Personal Records
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link {{ active_tab == 'info' ? 'active' : '' }}"
                   href="{{ path('player_info', {'nameUrl': player.nameUrl}) }}">
                    Info
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link {{ active_tab == 'lastadded' ? 'active' : '' }}"
                   href="{{ path('player_lastadded', {'nameUrl': player.nameUrl}) }}">
                    Last Added
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link {{ active_tab == 'lastachieved' ? 'active' : '' }}"
                   href="{{ path('player_lastachieved', {'nameUrl': player.nameUrl}) }}">
                    Last Achieved
                </a>
            </li>
        </ul>
    </div>
</div>
