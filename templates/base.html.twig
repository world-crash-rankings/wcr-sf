            </nav>

            {% if app.environment == 'staging' %}
                <div class="alert alert-warning text-center mb-3 rounded-0 border-0 fw-bold py-3" role="alert" style="background-color: #ff9800; color: #000;">
                    ⚠️ STAGING ENVIRONMENT - This is a test site with sample data ⚠️
                </div>
            {% endif %}

            <div class="container">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}

                {% block body %}{% endblock %}
            </div>
            <div class="push"></div>
        </div>

        <footer class="footer">
            <div class="container text-center">
                <p class="text-muted">World Crash Rankings &copy; 2014 - {{ 'now'|date('Y') }}</p>
            </div>
        </footer>
    </body>
</html>
