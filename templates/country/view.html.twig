{% extends 'base.html.twig' %}
{% import 'zone/_macros.html.twig' as macros %}

{% block title %}{{ country.name }} - {{ parent() }}{% endblock %}

{% block meta_description %}{{ country.name }} - Burnout 2 Crash Mode players and national records. View {{ players|length }} players from {{ country.name }} and their best scores.{% endblock %}

{% block meta_keywords %}{{ country.name }} players, burnout 2 {{ country.name }}, crash mode by country{% endblock %}

{% block structured_data %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Country",
  "name": "{{ country.name }}",
  "url": "{{ url('country_view', {nameUrl: country.nameUrl}) }}"
}
</script>
{% endblock %}

{% block body %}
<div class="row mt-4">
    <div class="col-12">
        {# Country header with flag #}
        <h1>
            <img src="{{ asset('img/flags/64/' ~ country.iso ~ '.png') }}"
                 alt="{{ country.abr }}"
                 title="{{ country.abr }}"
                 height="64">
            {{ country.name }}
        </h1>

        {# Country selector #}
        <div class="mb-4">
            <label for="countrySelector" class="form-label">Select Country:</label>
            <select id="countrySelector" class="form-select" style="max-width: 300px;" onchange="window.location.href=this.value">
                {% for c in countries %}
                    <option value="{{ path('country_view', {'nameUrl': c.nameUrl}) }}"
                            {% if c.id == country.id %}selected{% endif %}>
                        {{ c.name }}
                    </option>
                {% endfor %}
            </select>
        </div>
    </div>
</div>

{# National Records Section #}
<div class="row mt-4">
    <div class="col-12">
        <h2>National Records</h2>
        {% if nationalRecords is empty %}
            <p class="text-muted">No national records found for {{ country.name }}.</p>
        {% else %}
            <table class="table table-striped table-hover table-sm">
                <tbody>
                    {% for score in nationalRecords %}
                    <tr>
                        {# Zone name #}
                        <td>
                            <a href="{{ path('zone', {'id': score.zone.id}) }}" class="text-decoration-none fw-bold">
                                <span class="d-none d-md-inline">{{ score.zone.name }}</span>
                                <span class="d-md-none" style="font-size: 0.9rem;">{{ score.zone.name }}</span>
                            </a>
                        </td>

                        {# Rank with medal #}
                        <td class="text-center" style="width: 50px;">
                            {% if score.chartRank <= 3 %}
                                <img src="{{ asset('img/medals/' ~ score.chartRank ~ '.png') }}" alt="Rank {{ score.chartRank }}" width="24" height="24" class="d-md-none">
                                <img src="{{ asset('img/medals/' ~ score.chartRank ~ '.png') }}" alt="Rank {{ score.chartRank }}" width="32" height="32" class="d-none d-md-inline">
                            {% else %}
                                <span class="d-md-none">{{ score.chartRank }}</span>
                                <span class="h5 d-none d-md-inline">{{ score.chartRank }}</span>
                            {% endif %}
                        </td>

                        {# Score value #}
                        <td class="text-end">
                            <strong class="d-none d-sm-inline">{{ score.score|number_format(0, '.', ',') }}</strong>
                            <strong class="d-sm-none">{{ (score.score / 1000)|number_format(0) }}k</strong>
                        </td>

                        {# Car - Hidden on medium and smaller screens #}
                        <td class="text-center d-none d-lg-table-cell" style="width: 60px;">
                            {% if score.car %}
                                <img src="{{ asset('img/cars/' ~ score.car.name|car_image ~ '.png') }}" alt="{{ score.car.name }}" title="{{ score.car.name }}" width="40" height="20">
                            {% endif %}
                        </td>

                        {# Country flag #}
                        <td class="text-center" style="width: 50px;">
                            <img src="{{ asset('img/flags/32/' ~ score.player.country.iso ~ '.png') }}" alt="{{ score.player.country.name }}" title="{{ score.player.country.name }}" width="24" height="18" class="d-md-none">
                            <img src="{{ asset('img/flags/32/' ~ score.player.country.iso ~ '.png') }}" alt="{{ score.player.country.name }}" title="{{ score.player.country.name }}" width="32" height="24" class="d-none d-md-inline">
                        </td>

                        {# Player name #}
                        <td>
                            <a href="{{ path('player_view', {'nameUrl': score.player.nameUrl}) }}" class="text-decoration-none">
                                {{ score.player.name }}
                            </a>
                        </td>

                        {# Platform - Hidden on large and smaller screens #}
                        <td class="text-center d-none d-xl-table-cell" style="width: 50px;">
                            {% if score.platform %}
                                <img src="{{ asset('img/logos/' ~ score.platform.value|lower ~ '.png') }}" alt="{{ score.platform.value }}" title="{{ score.platform.value }}" width="24" height="24">
                            {% endif %}
                        </td>

                        {# Frequency/Version - Hidden on large and smaller screens #}
                        <td class="text-center d-none d-xl-table-cell" style="width: 60px;">
                            {% if score.freq and score.version %}
                                <img src="{{ asset('img/logos/' ~ score.freq.value|lower ~ '_' ~ score.version.value|lower ~ '.png') }}" alt="{{ score.freq.value }} {{ score.version.value }}" width="32" height="32">
                            {% elseif score.freq %}
                                <img src="{{ asset('img/logos/' ~ score.freq.value|lower ~ '_.png') }}" alt="{{ score.freq.value }}" width="32" height="32">
                            {% elseif score.version %}
                                <img src="{{ asset('img/logos/_' ~ score.version.value|lower ~ '.png') }}" alt="{{ score.version.value }}" width="32" height="32">
                            {% endif %}
                        </td>

                        {# Stars - Hidden on medium and smaller screens #}
                        <td class="text-center d-none d-lg-table-cell">
                            {% if score.stars %}
                                {% for i in 1..10 %}
                                    {% if i <= score.stars %}
                                        <img src="{{ asset('img/stars/full.png') }}" alt="★" width="16" height="16">
                                    {% else %}
                                        <img src="{{ asset('img/stars/empty.png') }}" alt="☆" width="16" height="16">
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                        </td>

                        {# Percent WR - Hidden on small screens #}
                        <td class="text-center d-none d-md-table-cell">
                            {% if score.percentWr %}
                                <span class="badge bg-success">{{ score.percentWr }}%</span>
                            {% endif %}
                        </td>

                        {# Proof #}
                        <td class="text-center" style="width: 50px;">
                            {% if score.proofType %}
                                {% if score.proofLink %}
                                    <a href="{{ score.proofLink }}" target="_blank">
                                        <img src="{{ asset('img/proofs/' ~ score.proofType.value|lower ~ '.png') }}" alt="{{ score.proofType.value }}" title="{{ score.proofType.value }}" width="20" height="20" class="d-md-none">
                                        <img src="{{ asset('img/proofs/' ~ score.proofType.value|lower ~ '.png') }}" alt="{{ score.proofType.value }}" title="{{ score.proofType.value }}" width="24" height="24" class="d-none d-md-inline">
                                    </a>
                                {% else %}
                                    <img src="{{ asset('img/proofs/' ~ score.proofType.value|lower ~ '.png') }}" alt="{{ score.proofType.value }}" title="{{ score.proofType.value }}" width="20" height="20" class="d-md-none">
                                    <img src="{{ asset('img/proofs/' ~ score.proofType.value|lower ~ '.png') }}" alt="{{ score.proofType.value }}" title="{{ score.proofType.value }}" width="24" height="24" class="d-none d-md-inline">
                                {% endif %}
                            {% endif %}
                        </td>

                        {# Date - Hidden on small screens #}
                        <td class="text-end text-muted d-none d-sm-table-cell">
                            <span class="d-none d-lg-inline">
                                {{ score.realisation ? score.realisation|date('F j, Y') : (score.registration|date('F j, Y')) }}
                            </span>
                            <span class="d-lg-none" style="font-size: 0.85rem;">
                                {{ score.realisation ? score.realisation|date('m/y') : (score.registration|date('m/y')) }}
                            </span>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
</div>

{# Players Section #}
<div class="row mt-5">
    <div class="col-12">
        <h2>Players</h2>
        {% if players is empty %}
            <p class="text-muted">No players found for {{ country.name }}.</p>
        {% else %}
            <table class="table table-striped table-hover table-sm">
                <thead class="d-none d-sm-table-header-group">
                    <tr>
                        <th class="text-center" style="width: 80px;">National Rank</th>
                        <th>Player</th>
                        <th class="text-end" style="width: 150px;">WCR Rank</th>
                    </tr>
                </thead>
                <tbody>
                    {% set previousRank = 0 %}
                    {% set tie = 0 %}
                    {% set i = 0 %}
                    {% for player in players %}
                        {% if previousRank == player.avgPosRank %}
                            {% set tie = tie + 1 %}
                        {% else %}
                            {% set tie = 0 %}
                        {% endif %}
                        {% set i = i + 1 %}
                        {% set previousRank = player.avgPosRank %}

                        <tr>
                            <td class="text-center" style="width: 60px;">
                                {% set nationalRank = i - tie %}
                                {% if nationalRank <= 3 %}
                                    <img src="{{ asset('img/medals/' ~ nationalRank ~ '.png') }}" alt="Rank {{ nationalRank }}" width="24" height="24" class="d-sm-none">
                                    <img src="{{ asset('img/medals/' ~ nationalRank ~ '.png') }}" alt="Rank {{ nationalRank }}" width="32" height="32" class="d-none d-sm-inline">
                                {% else %}
                                    <span class="d-sm-none">{{ nationalRank }}</span>
                                    <span class="h5 d-none d-sm-inline">{{ nationalRank }}</span>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('player_view', {'nameUrl': player.nameUrl}) }}" class="text-decoration-none">
                                    {{ player.name }}
                                </a>
                            </td>
                            <td class="text-end">
                                <span class="badge bg-secondary d-none d-sm-inline">WCR #{{ player.avgPosRank }}</span>
                                <span class="badge bg-secondary d-sm-none" style="font-size: 0.75rem;">#{{ player.avgPosRank }}</span>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
</div>
{% endblock %}
