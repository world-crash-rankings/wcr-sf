{% extends 'admin/layout.html.twig' %}

{% block title %}User Management - {{ parent() }}{% endblock %}

{% block admin_content %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>User Management</h2>
        <a href="{{ path('admin_user_add') }}" class="btn btn-primary">
            Add User
        </a>
    </div>

    {% if users.items|length > 0 %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                {% if 'ROLE_SUPER_ADMIN' in user.roles %}
                                    <span class="badge bg-danger">Super Admin</span>
                                {% elseif 'ROLE_ADMIN' in user.roles %}
                                    <span class="badge bg-warning text-dark">Admin</span>
                                {% else %}
                                    <span class="badge bg-secondary">User</span>
                                {% endif %}
                            </td>
                            <td>{{ user.createdAt|date('Y-m-d H:i') }}</td>
                            <td>
                                <a href="{{ path('admin_user_edit', {id: user.id}) }}" class="btn btn-sm btn-warning">
                                    Edit
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(users) }}
        </div>
    {% else %}
        <div class="alert alert-info">
            No users found. <a href="{{ path('admin_user_add') }}">Create your first user</a>.
        </div>
    {% endif %}
{% endblock %}
