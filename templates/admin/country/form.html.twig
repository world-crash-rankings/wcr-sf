{% extends 'admin/layout.html.twig' %}

{% block title %}{{ is_edit ? 'Edit Country' : 'Add Country' }} - {{ parent() }}{% endblock %}

{% block admin_content %}
    <div class="mb-4">
        <h2>{{ is_edit ? 'Edit Country' : 'Add Country' }}</h2>
    </div>

    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
        <div class="mb-3">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.abr) }}
            {{ form_widget(form.abr, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.abr) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.iso) }}
            {{ form_widget(form.iso, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.iso) }}
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                {{ is_edit ? 'Update' : 'Add Country' }}
            </button>
            <a href="{{ path('admin_country_list') }}" class="btn btn-secondary">
                Cancel
            </a>
        </div>
    {{ form_end(form) }}
{% endblock %}
