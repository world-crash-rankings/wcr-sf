{% extends 'admin/layout.html.twig' %}

{% block title %}Edit Zone - {{ parent() }}{% endblock %}

{% block admin_content %}
    <div class="mb-4">
        <h2>Edit Zone</h2>
    </div>

    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
        <div class="mb-3">
            {{ form_label(form.bestDamage) }}
            {{ form_widget(form.bestDamage, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.bestDamage) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.bestMulti) }}
            {{ form_widget(form.bestMulti, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.bestMulti) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.bestTotal) }}
            {{ form_widget(form.bestTotal, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.bestTotal) }}
        </div>

        <div class="mb-3 form-check">
            {{ form_widget(form.dmgWrKnown, {'attr': {'class': 'form-check-input'}}) }}
            {{ form_label(form.dmgWrKnown, null, {'label_attr': {'class': 'form-check-label'}}) }}
            {{ form_errors(form.dmgWrKnown) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.glitch) }}
            <div>
                {% for choice in form.glitch %}
                    <div class="form-check">
                        {{ form_widget(choice, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(choice, null, {'label_attr': {'class': 'form-check-label'}}) }}
                    </div>
                {% endfor %}
            </div>
            {{ form_errors(form.glitch) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.top25Channel) }}
            {{ form_widget(form.top25Channel, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.top25Channel) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.bestVidsChannel) }}
            {{ form_widget(form.bestVidsChannel, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.bestVidsChannel) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.forum) }}
            {{ form_widget(form.forum, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.forum) }}
        </div>

        <h3>Stars</h3>
        <div class="mb-3">
            {% set stars_sorted = zone.starThresholds|sort((a, b) => b.nbStars <=> a.nbStars) %}
            {% for star in stars_sorted %}
                {% set star_form = form.starThresholds[loop.index0] %}
                <div class="mb-2">
                    <label class="form-label">{{ star.nbStars }}</label>
                    {{ form_widget(star_form.score, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(star_form.score) }}
                </div>
            {% endfor %}
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                Edit Zone
            </button>
            <a href="{{ path('admin_zone_list') }}" class="btn btn-secondary">
                Cancel
            </a>
        </div>
    {{ form_end(form) }}
{% endblock %}
