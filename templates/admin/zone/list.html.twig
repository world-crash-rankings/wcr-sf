{% extends 'admin/layout.html.twig' %}

{% block title %}Zone Management - {{ parent() }}{% endblock %}

{% block admin_content %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Zone Management</h2>
    </div>

    {% if zones.items|length > 0 %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Best Total</th>
                        <th>Glitch Type</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for zone in zones %}
                        <tr>
                            <td>{{ zone.id }}</td>
                            <td>{{ zone.name }}</td>
                            <td>{{ zone.bestTotal|number_format }}</td>
                            <td>
                                {% if zone.glitch == 'glitch' %}
                                    <span class="badge bg-warning">Glitch</span>
                                {% elseif zone.glitch == 'sink' %}
                                    <span class="badge bg-info">Sink</span>
                                {% else %}
                                    <span class="badge bg-secondary">None</span>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('admin_zone_edit', {id: zone.id}) }}" class="btn btn-sm btn-warning">
                                    Edit
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {# Pagination #}
        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(zones) }}
        </div>
    {% else %}
        <div class="alert alert-info">
            No zones found.
        </div>
    {% endif %}
{% endblock %}
