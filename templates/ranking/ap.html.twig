{% extends 'base.html.twig' %}
{% import 'ranking/_ranking_macros.html.twig' as macros %}

{% block title %}Average Position (AP) Ranking - {{ parent() }}{% endblock %}

{% block meta_description %}Average Position (AP) Ranking - Top {{ players|length }} Burnout 2 Crash Mode players ranked by average chart position{% if players[0] is defined %}. Current leader: {{ players[0].name }} with {{ players[0].avgPos }} AP{% endif %}.{% endblock %}

{% block meta_keywords %}average position ranking, AP ranking, burnout 2 leaderboard, crash mode rankings{% endblock %}

{% block structured_data %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Average Position Ranking",
  "description": "Top Burnout 2 Crash Mode players ranked by average position",
  "numberOfItems": {{ players|length }},
  "itemListElement": [
    {% for player in players|slice(0, 10) %}
    {
      "@type": "ListItem",
      "position": {{ player.avgPosRank }},
      "item": {
        "@type": "Person",
        "name": "{{ player.name }}",
        "url": "{{ url('player_view', {nameUrl: player.nameUrl}) }}"
      }
    }{% if not loop.last %},{% endif %}
    {% endfor %}
  ]
}
</script>
{% endblock %}

{% block body %}
{% set current_ranking = 'ap' %}
{% include 'ranking/_ranking_header.html.twig' %}

<div class="row">
    <div class="col-12">
        <table class="table table-striped table-hover">
            <tbody>
                {% for player in players %}
                    {{ macros.ranking_row(player, 'avgPosRank', 'avgPos', 'decimal') }}
                {% endfor %}
            </tbody>
        </table>

        <div class="mt-3">
            {{ form_start(form) }}
                <div class="row align-items-end">
                    <div class="col-auto">
                        {{ form_row(form.limit) }}
                    </div>
                    <div class="col-auto">
                        {{ form_row(form.submit) }}
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
