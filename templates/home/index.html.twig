{% extends 'base.html.twig' %}

{% block title %}Accueil - World Crash Rankings{% endblock %}

{% block body %}
<div style="text-align: center; padding: 3rem 0;">
    <h1 style="font-size: 2.5rem; margin-bottom: 1rem; color: #2c3e50;">
        Bienvenue sur World Crash Rankings
    </h1>

    <p style="font-size: 1.2rem; color: #7f8c8d; margin-bottom: 2rem;">
        Système de gestion des classements Crash Mode
    </p>

    {% if app.user %}
        <div style="background: #ecf0f1; padding: 2rem; border-radius: 8px; max-width: 600px; margin: 0 auto;">
            <h2 style="margin-bottom: 1rem;">Vous êtes connecté</h2>
            <p><strong>Username:</strong> {{ app.user.username }}</p>
            <p><strong>Email:</strong> {{ app.user.email }}</p>
            <p><strong>Rôles:</strong> {{ app.user.roles|join(', ') }}</p>
        </div>
    {% else %}
        <div style="margin-top: 2rem;">
            <a href="{{ path('app_login') }}"
               style="display: inline-block; background: #3498db; color: white; padding: 1rem 2rem; text-decoration: none; border-radius: 4px; font-weight: bold;">
                Se connecter
            </a>
        </div>
    {% endif %}

    <div style="margin-top: 3rem; padding: 2rem; background: #f8f9fa; border-radius: 8px;">
        <h3 style="margin-bottom: 1rem;">Migration en cours</h3>
        <p>Ce projet est une migration de l'ancienne version Zend Framework 2 vers Symfony 8.0</p>
        <p style="margin-top: 0.5rem; color: #7f8c8d; font-size: 0.9rem;">
            Les fonctionnalités seront ajoutées progressivement
        </p>
    </div>
</div>
{% endblock %}
